<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layoutRegimnSansGlutan"
    tools:context=".RegimeSansSel">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/main_toolbar"
            />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/imo33"
            android:contentDescription="@string/todo"
            android:layout_marginStart="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="@string/un_r_gime_sans_gluten_est_un_r_gime_alimentaire_excluant_les_aliments_base_de_gluten_qui_est_un_compos_prot_ique_retrouv_dans_de_nombreuses_c_r_ales_comme_le_bl_l_orge_ou_le_seigle"
            android:layout_marginStart="20dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="@string/programme_alimentaire"
            android:textStyle="bold"
            android:id="@+id/regimsansglutan"
            android:backgroundTint="#997A8D"
            android:layout_marginStart="100dp"
            tools:targetApi="lollipop" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">
        <include
            layout="@layout/main_nav_drawer"
            />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>