<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout20"
    tools:context=".Search">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/main_toolbar"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:id="@+id/edittext"
            android:textStyle="bold"
            android:text=""
            android:autofillHints=""
            android:inputType="text"
            tools:ignore="LabelFor"
            tools:targetApi="lollipop" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="-70dp"
            android:src="@drawable/think"
            android:contentDescription="@string/todo"
            android:layout_marginStart="315dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:id="@+id/chercher"
            android:text="@string/chercher"
            android:layout_marginStart="20dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-50dp"
            android:textColor="@color/white"
            android:id="@+id/Reset"
            android:text="@string/reset"
            android:layout_marginStart="240dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textv"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="@string/les_mots_existants"
            android:textStyle="bold"
            android:layout_marginStart="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="@string/poids_taille_imc_alimentation_quilibr_mati_re_grasses_poids_id_al_ob_sit_maladies_m_taboliques_pathalogie"
            android:layout_marginStart="30dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">
        <include
            layout="@layout/main_nav_drawer"
            />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>